              "raw": "{\n  \"items\": [\n    {\n      \"product_id\": 1,\n      \"quantity\": 2,\n      \"price\": 29.99\n    }\n  ],\n  \"shipping_address\": \"123 Test St, City, Country\",\n  \"payment_method\": \"credit_card\",\n  \"total_amount\": 59.98\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin - Products",
      "item": [
        {
          "name": "Get All Products (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/products",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products"]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
