            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Peace Lily\",\n  \"description\": \"Beautiful indoor plant\",\n  \"price\": 29.99,\n  \"stock\": 50,\n  \"category_id\": 1,\n  \"image_url\": \"https://example.com/peace-lily.jpg\",\n  \"is_featured\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/products",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "products"]
            }
          }
        }
      ]
    },
